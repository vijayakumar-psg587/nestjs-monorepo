		"aws-sdk": "^2.918.0",
		"btoa": "^1.2.1",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"date-fns": "^2.22.1",
		"dotenv": "^10.0.0",
		"kafkajs": "^1.15.0",
		"mongoose": "^5.12.12",
		"performance-now": "^2.1.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.0.0",
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/testing": "^8.0.0",
