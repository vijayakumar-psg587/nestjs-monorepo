	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"build:babel": "npm run prebuild && babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
		"build:webpack:prod": "NODE_ENV=prod && npm run prebuild && webpack --config webpack.config.js",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"offline:deploy": "npm run build && export NODE_ENV=dev && SLS_DEBUG=* sls offline --stage dev -v",
		"aws:dev:deploy": "npm run build && export NODE_ENV=dev && SLS_DEBUG=* sls deploy --stage dev -v",
		"start": "nest start",
		"start:nodemon:dev": "NODE_ENV=dev && nodemon",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^8.0.0",
		"@nestjs/core": "^8.0.0",
		"reflect-metadata": "^0.1.13",
